<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WelcomeScreen">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="@font/interblack"
        android:text="Xoş gəlmisən!"
        android:textColor="#1F1F1F"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/interregular"
        android:text="Daxil ol vəya yeni hesab yarat"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="174dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="259dp"
        android:layout_height="244dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/img" />

    <Button
        android:id="@+id/log_in"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/roundedcornernotfilled"
        android:fontFamily="@font/interregular"
        android:text="Daxil ol"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textViewAsButton"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/roundedcornerfilled"
        android:fontFamily="@font/interregular"
        android:paddingTop="18dp"
        android:paddingEnd="80dp"
        android:text="Hesabın yoxdur?"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/log_in"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/qeydiyyatText"
        android:layout_width="69dp"
        android:layout_height="20dp"
        android:fontFamily="@font/interregular"
        android:text="Qeydiyyat"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAsButton"
        app:layout_constraintEnd_toEndOf="@+id/textViewAsButton"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="@+id/textViewAsButton"
        app:layout_constraintTop_toTopOf="@+id/textViewAsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>